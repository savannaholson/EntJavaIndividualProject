<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.UserRole" table="user_roles" schema="BOOK_TRACKER">
        <composite-id mapped="true" class="entity.UserRolesEntityPK">
            <key-property name="username" column="username"/>
            <key-property name="roleName" column="role_name"/>
        </composite-id>
    </class>
</hibernate-mapping>